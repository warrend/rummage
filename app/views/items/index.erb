<% if flash.has?(:message) %>
  <p><%= flash[:message] %></p>
<% end %>
<h1>Welcome, <a href="/users/<%= @user.slug %>"><%= @user.name.capitalize %></a>!</h1>
<p><a href="/items/new">Add a New Item</a></p>
<p><a href="/tags">Find by Tag</a></p>
<h3>List of the latest posted items</h3>
<% @items.each do |item| %>
  <div class="card-panel light-blue darken-1 z-depth-0">
    <h5><a class="white-text" href="/items/<%= item.id %>"><%= item.name %></a></h5>
  </div>
<% end %>
