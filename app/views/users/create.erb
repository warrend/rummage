<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h3>Create a New User</h3>

<form action="/signup" method="post">
  <label for="name">Username</label><br>
  <input type="text" id="name" name="name" placeholder="yourawesomeusername"><br>

  <label for="email">Email</label><br>
  <input type="text" id="email" name="email" placeholder="you@yourmail.com"><br>

  <label for="password">Password</label><br>
  <input type="password" id="password" name="password" placeholder="not1234"><br>

  <br>

  <input class="waves-effect waves-light btn" type="submit" value="signup">
</form>

<p>Already have an account? <a href="/login">Login here.</a></p>

